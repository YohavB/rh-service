# RushHour Backend Environment Variables
# Copy this file to .env and update with your values

# Database Configuration (External MySQL Service)
# Update these to match your rh-mysql service configuration
DB_URL=jdbc:mysql://localhost:3306/default?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
DB_USERNAME=rushhour_user
DB_PASSWORD=your_secure_password

# Application Configuration
SERVER_PORT=8008

# Logging Configuration
LOGGING_LEVEL_COM_YB_RH=INFO
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_WEB=WARN
LOGGING_LEVEL_ORG_HIBERNATE_SQL=WARN

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
GOOGLE_CLIENT_ID=your-google-oauth2-client-id

# Facebook OAuth2 Configuration
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Apple Sign In Configuration
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id

# SSL Configuration (Production)
SSL_KEYSTORE_PASSWORD=your-keystore-password 